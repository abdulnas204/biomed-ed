<Files ~ "\.(css)$">
	order allow,deny
	allow from all
</Files>
<Files ~ "\.(js)$">
	order allow,deny
	allow from all
</Files>
<Files ~ "\.(htm)$">
	order allow,deny
	allow from all
</Files>
<Files ~ "\.(html)$">
	order allow,deny
	allow from all
</Files>
<Files ~ "\.(png)$">
	order allow,deny
	allow from all
</Files>
<Files ~ "\.(jpg)$">
	order allow,deny
	allow from all
</Files>
<Files ~ "\.(gif)$">
	order allow,deny
	allow from all
</Files>
<Files ~ "\.(bmp)$">
	order allow,deny
	allow from all
</Files>
<Files ~ "\.(swf)$">
	order allow,deny
	allow from all
</Files>
deny from all

ErrorDocument 403 /system/deny/index.php?error=403
ErrorDocument 404 /system/deny/index.php?error=404

RewriteEngine on
RewriteRule ^(.*)\.htm$ $1.htm [L]